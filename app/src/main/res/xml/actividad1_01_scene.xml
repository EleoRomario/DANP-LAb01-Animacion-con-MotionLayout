<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        motion:constraintSetEnd="@id/end"
        motion:constraintSetStart="@+id/start"
        motion:duration="3000"
        motion:motionInterpolator="linear"
        >
        <KeyFrameSet>
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:pathMotionArc="startHorizontal"
                motion:percentY="0.75"
                motion:percentX="0.5"
                motion:framePosition="9"
                motion:motionTarget="@+id/button"/>
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.5"
                motion:percentX="0"
                motion:framePosition="18"
                motion:pathMotionArc="startVertical"
                motion:motionTarget="@+id/button"/>
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.26"
                motion:percentX="0.40"
                motion:framePosition="27"
                motion:pathMotionArc="startHorizontal"
                motion:motionTarget="@+id/button"/>
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentX="0.80"
                motion:percentY="0.45"
                motion:framePosition="36"
                motion:pathMotionArc="startVertical"
                motion:motionTarget="@+id/button"
                />
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:pathMotionArc="startHorizontal"
                motion:percentY="0.64"
                motion:percentX="0.50"
                motion:framePosition="45"
                motion:motionTarget="@+id/button"/>
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.5"
                motion:percentX="0.23"
                motion:framePosition="54"
                motion:pathMotionArc="startVertical"
                motion:motionTarget="@+id/button"/>
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.37"
                motion:percentX="0.45"
                motion:framePosition="63"
                motion:pathMotionArc="startHorizontal"
                motion:motionTarget="@+id/button"/>
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.47"
                motion:percentX="0.62"
                motion:framePosition="72"
                motion:pathMotionArc="startVertical"
                motion:motionTarget="@+id/button"
                />
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.55"
                motion:percentX="0.47"
                motion:framePosition="81"
                motion:pathMotionArc="startHorizontal"
                motion:motionTarget="@+id/button"/>
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.5"
                motion:percentX="0.39"
                motion:framePosition="85"
                motion:pathMotionArc="startVertical"
                motion:motionTarget="@+id/button"
                />
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentY="0.45"
                motion:percentX="0.46"
                motion:framePosition="90"
                motion:motionTarget="@+id/button"
                motion:pathMotionArc="startHorizontal"
                />
            <KeyPosition
                motion:keyPositionType="parentRelative"
                motion:percentX="0.51"
                motion:percentY="0.48"
                motion:framePosition="95"
                motion:motionTarget="@+id/button"
                motion:pathMotionArc="startVertical"
                />
        </KeyFrameSet>
        <OnClick
            motion:clickAction="toggle"
            motion:targetId="@+id/button"
            />
    </Transition>
    <ConstraintSet android:id="@+id/start">
        <Constraint
            android:id="@+id/button"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="8dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:pathMotionArc="startVertical"/>
    </ConstraintSet>

    <ConstraintSet android:id="@+id/end">
        <Constraint
            android:id="@+id/button"
            android:layout_width="10dp"
            android:layout_height="10dp"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintTop_toTopOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:keyPositionType="parentRelative"
            motion:pathMotionArc="startHorizontal"
            motion:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="20dp" />

    </ConstraintSet>


</MotionScene>
